<div class="form-address-container">
  <%= simple_form_for(address, remote: true, html: {class: 'd-flex flex-column'}) do |form| %>
    <div class="form-data text-center text-white">
    <%= form.input :name %>
    <%= form.input :address, input_html: { class: "autocomplete" } %>
      <div class="form-submit">
      <%= form.button :submit %>
      </div>
    </div>
  <% end %>
</div>
