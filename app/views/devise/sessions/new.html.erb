<div class="container p-3 bg-white min-height-100vh">

<%= image_tag("pawkeo.svg", style:"width:100px") %>

<h1 class="txt-gradient-purple-mag">Welcome to PAWKEO</h1>
<span>Let's find you a spot to park your car nearby, fast and easily...</span>


  <div class="card-login">

    <h2 class="txt-gradient-blue">But first...</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: false,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
