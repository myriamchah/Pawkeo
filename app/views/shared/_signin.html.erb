<div class="container p-0 min-height-100vh overflow-hidden bg-blue">

    <%= image_tag("pawkeo.svg", id:"logo") %>


  <div class="under-wave">
    <div class="description">
      <h1 class="mb-0"> KEEP CALM </h1>
      <p>AND</p>
      <h1>FIND A SPOT</h1> <br>
      <span> Pawkeo helps you find a spot to park your car, around you or a specific address. </span>
       <div class="phone-anim">
      <%= image_tag("Phone.png") %>
    </div>
    </div>

    <div class="card-login">

      <i class="fas fa-times" id="cross-leave"></i>

      <h2 class="txt-gradient-blue">Welcome to PAWKEO</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: false,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", id: "btn-login"%>
        </div>
      <% end %>
      <div class="pt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="btn-start">
    <h1>START</h1>
  </div>

</div>
